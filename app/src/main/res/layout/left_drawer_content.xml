<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/left_drawer"
    android:layout_width="240dp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="@color/colorPrimary"
    android:choiceMode="singleChoice">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:divider="@android:color/transparent"
        android:dividerHeight="1dp"
        android:orientation="vertical">


        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:drawableLeft="@drawable/ic_esperanto_star"
            android:drawableStart="@drawable/ic_esperanto_star"
            android:text="@string/app_name"
            android:theme="@style/LeftDrawerItem"
            android:background="@color/colorPrimaryDark"
            android:textSize="35sp"
            android:onClick="closeDrawers"
            android:layout_margin="1dp"/>



        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/emailToAuthorTV"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:drawableLeft="@drawable/ic_mail"
            android:text="@string/feedback_global"
            android:theme="@style/LeftDrawerItem"
            android:onClick="sendEmail"/>

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/emailToDeveloperTV"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:drawableLeft="@drawable/ic_mail"
            android:text="@string/feedback_app"
            android:theme="@style/LeftDrawerItem"
            android:onClick="sendEmail"/>
    </LinearLayout>
</ScrollView>